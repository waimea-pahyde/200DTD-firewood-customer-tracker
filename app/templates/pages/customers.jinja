{#=====================================================
  Things list page
  - List of things passed in as 'things' array
  - Form for adding a new thing
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block title %}

    Customer List

{% endblock %}


{% block content %}

    <article id="intro">
    <h1>Customer Data</h1>
    </article>

    <input
    type="search"
  name="search"
  placeholder="Search"
  aria-label="Search"
  id="search"
/>

<article id="backgroundPieChart">

<img src="/static/images/piechart.png" id="image">


<article id="textBackground">
<p class="">Generic Wood: 50%</p>
<p>Generic Wood 2: 50%</p>
</article>

</article>

  <article>

        <ul>
            {% for customer in customers %}

                <li>
                    <a href="/customer/{{ customer.id }}">
                        {{ customer.name }}
                    </a>

                    <ul>
                        {% for order in orders %}
                            {% if customer.id == order.cid %}
                                <li>
                                    <a href="/order/{{ order.id }}">
                                         {{ order.date  }}
                                    </a>
                                </li>
                            {% endif %}
                        {% else %}
                            <li>NONE</li>
                        {% endfor %}
                    </ul>
                </li>

            {% else %}

                <p>None!</p>

            {% endfor %}
        </ul>

    </article>

 

{% endblock %}

