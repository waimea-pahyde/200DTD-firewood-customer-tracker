{#=====================================================
  Things list page
  - List of things passed in as 'things' array
  - Form for adding a new thing
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block title %}

    Track an order

{% endblock %}


{% block content %}
  <article class="borderHeader">
    <h1 class="text">Log an order</h1>
</article>
    <article class="background">
        <form action="/add" method="POST">

            <input
                type="text"
                name="name"
                placeholder="Customer Name"
                class="input"
                required
            >

            <input type="date" name="date" aria-label="Date">
    
            
            <table id="theTable">
                <thead>
                  <tr id="theTable">
                    <th scope="col" class="theTable">Woods</th>
                    <th scope="col" class="theTable">Amounts</th>
                  </tr>
                </thead>
                <tbody>

                {% for wood in woods %}
                  <tr>
                    <th scope="row" class="theTable">{{ wood.type }}</th>
                    <td class="theTable">
                        <input
                          type="number"
                          placeholder="amount"
                          name="wood-{{ wood.id }}"
                          id="lighterBrown"
                          
                        >
                    </td>
                  </tr>

                {% endfor %}
                                    
                </tfoot>
            </table>

            <input
                type="text"
                name="email"
                placeholder="Email Adress"
                required
            >

            <input
                type="text"
                name="phone"
                placeholder="Phone Number"
                required
            >
            <input
                type="text"
                name="address"
                placeholder="Address"
                required
            >

            <button id="lightbrownButton">Place Order</button>

        </form>

    </article>

{% endblock %}

